<Page x:Class="Game.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game"
      xmlns:game="clr-namespace:RegimentOfFoot.Game"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingsPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <game:DecisionControl Text ="Difficulty: Normal" Margin="10,20,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="128"/>
            <game:DecisionControl Text ="Setting: Historical" Margin="10,20,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="128"/>
            <game:DecisionControl Text ="Back" Margin="10,20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="128"/>
        </StackPanel>
    </Grid>
</Page>
